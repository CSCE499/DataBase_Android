<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="314dp"
        android:layout_marginTop="90dp"
        android:layout_weight="0.12"
        android:background="@color/main_background">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reminderWelcome"
            android:text="Add Reminder"
            android:textColor="@color/colorPrimary"
            android:textSize="32dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/minPrompt"
            android:text="Time Before Event:"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/hrSpinner"
            android:textColor="@color/colorPrimary"
            android:layout_alignTop="@+id/minSpin"
            android:layout_alignParentStart="true"
            android:layout_marginStart="41dp">
        </Button>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/minSpin"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/minPrompt"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="46dp">
        </Button>

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Add"
            android:id="@+id/addTheReminder"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />



    </RelativeLayout>

</FrameLayout>
